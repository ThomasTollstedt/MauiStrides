<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiStrides.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiStrides.Views"
    Shell.BackgroundColor="{StaticResource AppBackground}"
    Shell.ForegroundColor="{StaticResource AppText}"
    Shell.TitleColor="{StaticResource AppText}"
    Shell.TabBarBackgroundColor="{StaticResource AppBackground}"
    Shell.TabBarForegroundColor="{StaticResource AppText}"
    Shell.TabBarTitleColor="{StaticResource AppText}"
    Shell.TabBarUnselectedColor="{StaticResource AppSecondary}">

    <ShellContent
        Title="Activities"
        ContentTemplate="{DataTemplate local:ActivitiesPage}"
        Route="ActivitiesPage" />

    <ShellContent
    Title="Profile"
    ContentTemplate="{DataTemplate local:ProfilePage}"
    Route="ProfilePage" />

</Shell>
