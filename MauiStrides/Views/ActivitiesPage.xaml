<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiStrides.ViewModels"
             xmlns:models="clr-namespace:MauiStrides.Models"
             x:Class="MauiStrides.Views.ActivitiesPage"
             Title="Activities">

    <Grid RowDefinitions="auto, *">
        <Grid Grid.Row="0" Padding="10" BackgroundColor="#FC5200">
            <Label Text="Mina Aktiviteter" 
                   VerticalOptions="Center" 
                   TextColor="White" 
                   FontAttributes="Bold"/>

            <Border StrokeShape="RoundRectangle 25"
                    HeightRequest="50" WidthRequest="50"
                    HorizontalOptions="End"
                    Stroke="White"
                    StrokeThickness="2">

                <Image Source="{Binding CurrentAthleteProfile.ProfileMedium}"
                       Aspect="AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </Grid>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Activities}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding GoToDetailsCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Activity">
                    <Border Padding="10" Margin="5" StrokeShape="RoundRectangle 10">
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">

                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding Name}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"/>

                            <Label Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding StartDate, StringFormat='{0:yyyy-MM-dd}'}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   HorizontalOptions="End"/>

                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="10" Margin="0,5,0,0">
                                <Label Text="{Binding Type}" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
                                <Label Text="{Binding Distance, StringFormat='{0:F0} m'}" TextColor="Gray"/>
                            </HorizontalStackLayout>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>